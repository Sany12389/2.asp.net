@model IEnumerable<Tipo>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: white;">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">new Create</a>
</p>
<table class="table border border-primary-subtle" style="color: white;">
    <thead>
        <tr>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
