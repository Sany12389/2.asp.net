@model IEnumerable<app_tarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Index";
}

<div style="background-color: #001f3f; min-height: 100vh; color: white; padding: 30px;">
<h1 style="color: white;">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-light" style="color: #001f3f;">Create New</a>
</p>
<table class="table border border-primary-subtle" style="color: white;">
    <thead>
        <tr>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.DataConclusao)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Concluida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td style="color: white;">
                @item.DataCriacao.ToString("dd/MM/yyyy HH:mm")
            </td>
            <td style="color: white;">
                @item.DataConclusao?.ToString("dd/MM/yyyy HH:mm")
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Tipo.Descricao)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Concluida)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="color: white;">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" style="color: white;">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style="color: white;">Delete</a>
            </td>
        </tr>
}
    </tbody>

</table>
</div>
