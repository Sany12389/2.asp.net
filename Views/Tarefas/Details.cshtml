@model app_tarefas.Models.Tarefa

@{
    ViewData["Title"] = "Details";
}

<div style="background-color: #001f3f; min-height: 100vh; color: white; padding: 30px;">
<h1 style="color: white;">Details</h1>

<div>
    <h4 style="color: white;">Tarefa</h4>
    <hr />
    <dl class="row">
    <dt class = "col-sm-2" style="color: white;">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
    <dd class = "col-sm-10" style="color: white;">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Data de Criação
        </dt>
        <dd class = "col-sm-10">
            @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class = "col-sm-2">
            Data de Conclusão
        </dt>
        <dd class = "col-sm-10">
            @Model.DataConclusao?.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concluida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Concluida)
        </dd>
    </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="color: white;">Edit</a> |
    <a asp-action="Index" style="color: white;">Back to List</a>
</div>
